package com.capgemini.bnk.junitscbnew;

import static org.junit.jupiter.api.Assertions.assertEquals;

import org.junit.jupiter.params.ParameterizedTest;
import org.junit.jupiter.params.provider.CsvSource;

public class CalculatorParameterizedTest {


	Calc calculator = new Calc();

	@ParameterizedTest(name = "Add operation test: {0} + {1} = {2}")
	@CsvSource({
		"1, 1, 1",
		"2, 3, 5",
		"5, 5, 10",
		"-3, 3, 0",
		"0, 0, 0"
	})
	public void testAdd(int input1, int input2, int expectedResult) {
		assertEquals(expectedResult, calculator.add(input1, input2));
		System.out.println("test add success!");
	}
}


class Calc {
	
	public int add(int a , int b) {
		return a + b;
	}
}