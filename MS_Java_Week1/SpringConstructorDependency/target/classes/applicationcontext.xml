<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
<bean id = "add1" class = "com.capgemini.in.SpringInjectionUsingCollections.Address">
	<constructor-arg  value = "1"></constructor-arg>
	<constructor-arg  value = "LA"></constructor-arg>
</bean>

<bean id = "add2" class = "com.capgemini.in.SpringInjectionUsingCollections.Address">
	<constructor-arg  value = "2"></constructor-arg>
	<constructor-arg value = "Bali"></constructor-arg>
</bean>


<bean id = "pr" class = "com.capgemini.in.SpringInjectionUsingCollections.Person">
	<property name = "id" value = "1"></property>
	<property name = "name" value = "Alexa"></property>
	<property name = "characterstics">
		<list> 
			<value>Alexa is a good person.</value>
			<value>Alexa is Smart.</value>
			<value>Alexa is active person</value>
		 </list>
	</property>
	<property name="address">
		<list>
			<ref bean="add1" />
			<ref bean="add2"/>
		
		</list>
	
	</property>
	<property name="styleRating">
		<map>
			<entry key="HairStyle" value="2"/>
			<entry key="Dressing" value="4"/>
			<entry key="Speaking" value="3"/>
			<entry key="Looks" value="1"/>
		</map>
	</property>
</bean>


	<bean id = "messageService" class = "com.capgemini.in.constructor.MessageService">
		<constructor-arg  value = "Constructor Wish you the best"></constructor-arg>
	</bean>
	
	<bean id = "greetingService" class = "com.capgemini.in.constructor.GreetingService">
		<constructor-arg  ref = "messageService"></constructor-arg>
	</bean>
</beans>