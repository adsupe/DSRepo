package com.cg.scb.book.ctrl;

import static org.junit.Assert.assertEquals;
import static org.mockito.Mockito.verify;
import static org.mockito.Mockito.when;

import org.junit.jupiter.api.Test;
import org.junit.runner.RunWith;
import org.mockito.ArgumentMatchers;
import org.mockito.InjectMocks;
import org.mockito.Mock;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.autoconfigure.web.servlet.WebMvcTest;
import org.springframework.boot.test.mock.mockito.MockBean;
import org.springframework.test.context.junit4.SpringRunner;

import com.cg.scb.book.Book;
import com.cg.scb.book.BookController;
import com.cg.scb.book.BookRepository;
import com.cg.scb.book.BookService;

@RunWith(SpringRunner.class)
@WebMvcTest(BookController.class)
public class CreateBookServiceTest {

	@Autowired
	private BookRepository repository;
	
	@MockBean
	private BookService service;
	
	@Test
	public void whenSaveBook_shouldReturnBook() {
		Book book = new Book(333,"BB",5000.99);
		
		when(repository.save(ArgumentMatchers.any(Book.class))).thenReturn(book);
		
		Book bookCreated = service.createBook(book);
		assertEquals(book.getName(), bookCreated.getName());
		
		verify(repository).save(book);
		
	}
}
